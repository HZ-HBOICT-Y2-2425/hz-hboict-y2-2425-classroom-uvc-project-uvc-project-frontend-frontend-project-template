{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "ESNext", 
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"]
    },
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}